<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sleepfall.feetfall">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/splashScreenTheme">

        <activity android:name="com.sleepfall.feetfall.ItemDetailsActivity" />
        <activity android:name="com.sleepfall.feetfall.ChaptersActivity" />
        <activity android:name="com.sleepfall.feetfall.ApiActivity" />
        <activity android:name="com.sleepfall.feetfall.StatsActivity" />
        <activity android:name="com.sleepfall.feetfall.GameActivity" />
        <activity android:name="com.sleepfall.feetfall.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>